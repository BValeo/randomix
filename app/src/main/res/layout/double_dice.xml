<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/diceZone"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_button_height"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless"
    xmlns:android="http://schemas.android.com/apk/res/android">

<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diceButtonAnimation1"
    android:layout_width="@dimen/image_button_height"
    android:layout_height="@dimen/image_button_height"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:contentDescription="@string/throw_dice"
    android:src="@drawable/dice_1_vector_animation" />

<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diceButtonAnimation2"
    android:layout_width="@dimen/image_button_height"
    android:layout_height="@dimen/image_button_height"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:contentDescription="@string/throw_dice"
    android:src="@drawable/dice_1_vector_animation" />

</LinearLayout>