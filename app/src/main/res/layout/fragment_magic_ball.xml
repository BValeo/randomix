<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MagicBall">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleMagicBall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:text="@string/hello_magic_ball_fragment"
                android:textAllCaps="true"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionMagicBall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_description_height"
                android:layout_margin="@dimen/linear_vertical_margin"
                android:gravity="center_horizontal"
                android:text="@string/description_magic_ball"
                android:textSize="@dimen/description_text_size" />

            <TextView
                android:id="@+id/resultMagicBall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_result_height"
                android:layout_marginTop="@dimen/linear_vertical_margin"
                android:layout_marginBottom="@dimen/linear_vertical_margin"
                android:gravity="center_horizontal"
                android:text="@string/result_placeholder"
                android:textSize="@dimen/result_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/magicBallButtonAnimation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_button_height"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/spin_roulette"
                android:src="@drawable/magic_ball_vector_animation"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>